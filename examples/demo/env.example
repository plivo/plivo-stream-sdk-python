# LLM, STT, TTS API settings
## OpenAI LLM settings (Mandatory)
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4o-mini"
SYSTEM_PROMPT="You are a helpful AI assistant. Keep responses brief and conversational, suitable for voice interaction."

# Deepgram STT (Mandatory)
DEEPGRAM_API_KEY=""
DEEPGRAM_MODEL="flux-general-en"

# Elevenlabs TTS (Mandatory)
ELEVENLABS_API_KEY=""
ELEVENLABS_VOICE_ID=""
ELEVENLABS_MODEL_ID=""

## Audio Configuration (Mandatory)
# Sample rate must match upstream/downstream services
AUDIO_SAMPLE_RATE=16000
# Content type for PCM linear 16-bit audio
AUDIO_CONTENT_TYPE="audio/x-l16"

## Recording Configuration
# Whether to record the call (default true)
ENABLE_RECORDING=true
# Recording callback URL behavior:
# - "auto": dynamically set to http://<Host>/recording
# - "auto+https": dynamically set to https://<Host>/recording
# - any other non-empty value: used as-is (must be a valid URL)
# If unset or empty, it defaults to "auto".
RECORDING_CALLBACK_URL="auto"

## WebSocket Configuration
# WEBSOCKET_URL options:
# - "auto": dynamically set to ws://<Host>/stream
# - "auto+wss": dynamically set to wss://<Host>/stream
# - any other non-empty value: used as-is (must be a valid ws:// or wss:// URL)
# If unset or empty, it defaults to "auto".
WEBSOCKET_URL="auto"


# Log level
LOG_LEVEL="debug"

